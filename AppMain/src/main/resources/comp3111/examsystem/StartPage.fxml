<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600" prefWidth="600" spacing="30.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="comp3111.examsystem.controller.StartPageController"
      style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e3efff); -fx-padding: 20;">
   <children>
      <!-- Logo Section -->
      <ImageView fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@../../imgs/hkust_logo.png" />
      </ImageView>

      <!-- Title Section -->
      <Label text="Welcome to HKUST Examination System"
             style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 10;" />

      <!-- Buttons Section -->
      <VBox alignment="CENTER" spacing="20.0">
         <Button mnemonicParsing="false" onAction="#studentLogin" text="Student Login"
                 style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, 0);" />
         <Button mnemonicParsing="false" onAction="#teacherLogin" text="Teacher Login"
                 style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, 0);" />
         <Button mnemonicParsing="false" onAction="#managerLogin" text="Manager Login"
                 style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, 0);" />
      </VBox>
   </children>
</VBox>
